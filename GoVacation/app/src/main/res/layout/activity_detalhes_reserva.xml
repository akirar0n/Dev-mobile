<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetalhesReserva">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp"> <TextView
        android:id="@+id/tvTituloDetalhe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Detalhes da Locação"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivDetalheImagem"
            android:layout_width="332dp"
            android:layout_height="82dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTituloDetalhe"
            tools:srcCompat="@drawable/govac" />

        <TextView
            android:id="@+id/tvDetalheTituloLoc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="Título da Locação"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/tvDetalhePreco"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivDetalheImagem" />

        <TextView
            android:id="@+id/tvDetalheLocal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Localização"
            app:layout_constraintEnd_toEndOf="@+id/tvDetalheTituloLoc"
            app:layout_constraintStart_toStartOf="@+id/tvDetalheTituloLoc"
            app:layout_constraintTop_toBottomOf="@+id/tvDetalheTituloLoc" />

        <TextView
            android:id="@+id/tvDetalheHospedes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Até X hóspedes"
            app:layout_constraintEnd_toEndOf="@+id/tvDetalheTituloLoc"
            app:layout_constraintStart_toStartOf="@+id/tvDetalheTituloLoc"
            app:layout_constraintTop_toBottomOf="@+id/tvDetalheLocal" />

        <TextView
            android:id="@+id/tvDetalhePreco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="R$ 0,00"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvDetalheTituloLoc" />

        <TextView
            android:id="@+id/tvDetalhePrecoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/ noite"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/tvDetalhePreco"
            app:layout_constraintTop_toBottomOf="@+id/tvDetalhePreco" />

        <TextView
            android:id="@+id/tvDetalheDescr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="Descrição completa da locação..."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDetalheHospedes" />

        <TextView
            android:id="@+id/tvLabelCheckin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Data de Check-in"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/tvDetalheDescr"
            app:layout_constraintTop_toBottomOf="@+id/tvDetalheDescr" />

        <EditText
            android:id="@+id/etDataCheckin"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_edittext_clickable"
            android:clickable="true"
            android:focusable="false"
            android:hint="Selecione a data de check-in"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="@+id/tvDetalheDescr"
            app:layout_constraintStart_toStartOf="@+id/tvDetalheDescr"
            app:layout_constraintTop_toBottomOf="@+id/tvLabelCheckin" />

        <TextView
            android:id="@+id/tvLabelCheckout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Data de Check-out"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/etDataCheckin"
            app:layout_constraintTop_toBottomOf="@+id/etDataCheckin" />

        <EditText
            android:id="@+id/etDataCheckout"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_edittext_clickable"
            android:clickable="true"
            android:enabled="false"
            android:focusable="false"
            android:hint="Selecione a data de check-out"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="@+id/etDataCheckin"
            app:layout_constraintStart_toStartOf="@+id/etDataCheckin"
            app:layout_constraintTop_toBottomOf="@+id/tvLabelCheckout"
            tools:enabled="true" />

        <TextView
            android:id="@+id/tvLabelPagamento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Método de Pagamento"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/etDataCheckout"
            app:layout_constraintTop_toBottomOf="@+id/etDataCheckout" />

        <Spinner
            android:id="@+id/spinnerMetodoPag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="@+id/etDataCheckout"
            app:layout_constraintStart_toStartOf="@+id/etDataCheckout"
            app:layout_constraintTop_toBottomOf="@+id/tvLabelPagamento" />

        <Button
            android:id="@+id/btnConfirmarReserva"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Confirmar Reserva"
            app:layout_constraintEnd_toEndOf="@+id/spinnerMetodoPag"
            app:layout_constraintStart_toStartOf="@+id/spinnerMetodoPag"
            app:layout_constraintTop_toBottomOf="@+id/spinnerMetodoPag" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>